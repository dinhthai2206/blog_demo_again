<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".home"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= form_with url: search_path, local: true, method: :get, class: "form-inline" do |form| %>
              <div class="form-group">
                <%= form.text_field :q, placeholder: "Search user", data: {behavior: "autocomplete"}, class: "form-control" %>
              </div>
              <%= form.button "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
            <% end %>
          </li>
          <li><%= link_to t(".users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t ".account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
